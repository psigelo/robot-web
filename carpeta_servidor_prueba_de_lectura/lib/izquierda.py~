P2M5 = ["213250","213215","213225"]

def move(abv=0):
	polmot = int(abv[0])*100 + int(abv[1])*10 + int(abv[2])
	ang = int(abv[3])*100 + int(abv[4])*10 + int(abv[5])
	arduino.write(chr(polmot))
	arduino.write(chr(ang))


def posicionInicial():

